@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_fondo = #F0F0F0

body
	font-size 16px	
	font-family 'Varela Round', sans-serif
figure
	margin 0
img
	vertical-align top
a
	text-decoration none
ul
	margin 0
	padding 0
//button
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//oocss classes
.relative
	position relative
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.border-bottom
	border-bottom 1px solid gris_claro
.padding
	padding 1em	
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min		
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
		.circle
			width 10px
			height 10px
			background gris_oscuro
			border-radius 50%
			position absolute
			right 0
			top -2px

.name
	color gris_oscuro	
.author
	color gris_claro
.menu
	display none
.header
	height 3.5em
//	a
	//	display none
	.title
		font-size 1.2em
		line-height 3.5em
		margin 0
		text-align center
.container
	font-size 0	
	padding 1.4rem	
	text-align center

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
		
.playing
	&.small
		width 20em
		
.actions
	position absolute
	bottom 0
	right 0
	left 0	
	background rgba(black,.3)

.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
		
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro
.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em
		
@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
			
@media screen and (min-width:1000px)
	body
		background gris_fondo
	.button-menu
		display none
	.header
		height auto
		.title
			display none
	.menu
		background gris_fondo
		display block
		overflow hidden
		.item
			float left
			list-style none			
			a
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro

	.isotipo
		width 122px
	.logo
		background white
		padding 1.3em 0
		overflow hidden
	.avatar
		width 38px
		height 38px
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after
			content ""
			display inline-block
			border-top 9px solid gris_claro
			border-left 7px solid transparent
			border-right 7px solid transparent
			margin-left .4em
			
			
