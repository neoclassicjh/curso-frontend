@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181

body
	font-size 16px	
	font-family 'Varela Round', sans-serif
figure
	margin 0
a
	text-decoration none
//button
.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em
//oocss classes
.relative
	position relative
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro	
.author
	color gris_claro
.menu
	display none
.header
	height 3.5em
//	a
	//	display none
	.title
		font-size 1.2em
		line-height 3.5em
		margin 0
		text-align center
.container
	font-size 0	
	padding 1.4rem	
	text-align center
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0